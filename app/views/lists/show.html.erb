<div class="row d-flex justify-content-center flex-nowrap">
  <p><%= link_to 'Create a bookmark', new_list_bookmark_path(@list.id), class:"btn btn-success card-button" %></p>
</div>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <h2 class="title-text"><%= @list.name %></h2>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", "/lists", class: "nav-link btn btn-primary" %>
      </li>
    </ul>
  </div>
</div>

<div class="row d-flex justify-content-center flex-nowrap">
  <p><%=@list.photo.attached? ? cl_image_tag(@list.photo.key, height: 300, width: 600, crop: :fill) : image_tag('https://www.pptgrounds.com/wp-content/uploads/2012/08/Blue-movie-film-strip-backgrounds.jpg') %></p>
</div>
<% @list.bookmarks.each do |bookmark| %>
  <div class="card-product m-2">
    <%= image_tag bookmark.movie.poster_url %>
    <div class="card-product-infos">
      <h2><%= bookmark.movie.title %> </h2><br>
      <p><%= bookmark.movie.overview %></p>
      <p>Rating: <%= bookmark.movie.rating %></p>
      <p>Anon says: <%= bookmark.comment %></p>
    </div>
  </div>

<% end %>

